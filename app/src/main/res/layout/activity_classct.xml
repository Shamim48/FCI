<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/codeworld"
    tools:context="com.example.fci.myapp_1.Classct">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="495dp"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/cst"
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cstb2u"
                android:onClick="crcst"
                android:text="" />

            <Button
                android:id="@+id/dnt"
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dntb2u"
                android:onClick="crdnt"
                android:text="" />

            <Button
                android:id="@+id/tct"
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tctb2u"
                android:onClick="crtct"
                android:text="" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
