<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uiimage"
    tools:context="com.example.fci.myapp_1.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/wctofci" />

            <Button
                android:id="@+id/button"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="aboutfci"
                android:text="About FCI"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dep"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="department"
                android:text="department"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principalsir"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="principal"
                android:text="principal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teacher"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="teacherb"
                android:text="Teachers"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/staf"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="office Staffs"
                android:onClick="staffci"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/classcr"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="classcrb"
                android:text="Class cr"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/activitiesbtn"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="activitesb"
                android:text="activities"
                android:textSize="28dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/hostelbtn"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:onClick="hostelb"
                android:textStyle="bold"
                android:text="hostel"
                android:textSize="28dp"/>

            <Button
                android:id="@+id/contactbtn"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="Contact"
                android:onClick="contact"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/routine"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="Routine"

                android:onClick="routine"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resultb"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="result"

                android:onClick="result"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/fcinotice1"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="Notice Board"

                android:onClick="noticeboard"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/campassmap"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="campus map"
                android:onClick="campussmap"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/websitfci"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="fci website"
                android:onClick="fciwebsite"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seipbtn"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="about seip"
                android:onClick="aboutseip"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/photogallery"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="Photo Gallery"
                android:onClick="gallery"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/aboutus"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:fontFamily="sans-serif"
                android:text="about us"
                android:onClick="aboutus"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
